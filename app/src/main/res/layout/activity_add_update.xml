<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.washab.trafficapp.AddUpdate">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location  "
        android:id="@+id/locationText"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationEditText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/locationText"
        android:layout_toEndOf="@+id/locationText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Estimated Time"
        android:id="@+id/estimatedTimeText"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/locationText"
        android:layout_alignLeft="@+id/locationText"
        android:layout_alignStart="@+id/locationText" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Situation"
        android:id="@+id/situationText"
        android:layout_below="@+id/estimatedTimeText"
        android:layout_alignLeft="@+id/estimatedTimeText"
        android:layout_alignStart="@+id/estimatedTimeText"
        android:layout_marginTop="48dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/situationText"
        android:layout_toRightOf="@+id/locationText"
        android:layout_toEndOf="@+id/locationText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Update"
        android:id="@+id/addUpdateButton"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/timeStampText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onUpdateButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TimeStamp"
        android:id="@+id/timeStampText"
        android:layout_below="@+id/situationText"
        android:layout_marginTop="48dp"
        android:layout_alignLeft="@+id/situationText"
        android:layout_alignStart="@+id/situationText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_above="@+id/addUpdateButton"
        android:layout_toRightOf="@+id/locationText"
        android:layout_toEndOf="@+id/locationText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/estTimeEditText"
        android:layout_alignBottom="@+id/estimatedTimeText"
        android:layout_toRightOf="@+id/estimatedTimeText"
        android:layout_toEndOf="@+id/estimatedTimeText" />

</RelativeLayout>
