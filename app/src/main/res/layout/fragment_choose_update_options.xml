<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.washab.trafficapp.ChooseUpdateOptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD UPDATE"
                android:id="@+id/startAddingUpdateButton"
                android:onClick="OnStartingToAddUpdateButtonClick"
                android:paddingRight="@dimen/activity_horizontal_margin"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5dp"
                android:paddingTop="5dp">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:baselineAligned="true">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateOptionMostFavouriteButton"
                        android:text="@string/most_popular"
                        android:checked="false"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/most_recent"
                        android:id="@+id/updateOptionMostRecentButton"
                        android:checked="true"
                        />

                </RadioGroup>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:paddingBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#BFCFBC" />

    </LinearLayout>

</LinearLayout>


