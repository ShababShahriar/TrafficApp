<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.washab.trafficapp.AddDiscussion">



    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="2"
            />



        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="15dp"

            android:layout_weight="2"
            android:id="@+id/announcementTitleEditText"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="location"
            android:layout_weight="1.2"
            />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/announcementLocationSpinner"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description "
            android:layout_weight="1.5"
            />

        <EditText
            android:id="@+id/descriptionBox"
            android:paddingTop="1dp"
            android:layout_width="259dp"
            android:layout_height="45dp"
            android:background="@drawable/description_text_box"
            android:hint="Additional information..."
            android:paddingLeft="10dp"
            android:inputType="textVisiblePassword"
            android:textSize="15dp"
            android:layout_gravity="right"/>



    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_announcement_button"
        android:id="@+id/addDiscussionButton"
        android:layout_gravity="right"
        />



</LinearLayout>
