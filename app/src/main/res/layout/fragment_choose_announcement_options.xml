<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.washab.trafficapp.ChooseAnnouncementOptionsFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ANNOUNCEMENT"
        android:id="@+id/startAddingAnnouncementButton"
        android:paddingRight="@dimen/activity_horizontal_margin"

        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/announcementOptionMostFavouriteButton"
            android:text="@string/most_favourite"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/most_recent"
            android:id="@+id/announcementOptionMostRecentButton"

            />

    </RadioGroup>

</LinearLayout>
